  {{#each node in model.nodes}}
    <div class='well infos {{model.state}}'>
      <div>
        {{#link-to 'containers' node}}
        <div>
          <div class='head'>
            <div class='name'>{{node.name}}</div>
            <div class='id'>{{node.id}}</div>
          </div>
          <div class='state {{model.state}}'>{{node.state}}</div>
        </div>
        {{/link-to}}
      </div>

      <div class='content'></div>

      <div class='actions'>
        {{#link-to 'node.edit' node}}<button class='btn btn-warning'>Edit</button>{{/link-to}}
        <button {{action 'deleteNode' node}} class='btn btn-danger'>Delete</button>
      </div>
    </div>
  {{/each}}
