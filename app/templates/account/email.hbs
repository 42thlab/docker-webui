<div class='jumbotron'>
  {{#em-form model=model submit_button=false}}
    {{em-input property="newEmail" label="New email" placeholder="Enter the new email for the account"}}
    {{em-input property="password" label="Current password" type="password" placeholder="Enter your current password"}}
  {{/em-form}}

  {{em-button on-click='submit' default='Save' class='btn btn-success' executing='Saving' resolved='Saved' rejected="Failed"}}
</div>
